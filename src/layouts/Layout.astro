---
import "../styles/global.css";

interface Props {
  title?: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" sizes="any" href="/favicon.svg" />
    <link rel="icon" type="image/png" sizes="256x256" href="/favicon.png" />
    <link rel="apple-touch-icon" href="/favicon.png" />
    <link rel="mask-icon" href="/favicon.svg" color="#22c55e" />
    <title>
      {title ? `${title} | Keycapsss` : "Keycapsss Social Link Page"}
    </title>
  </head>
  <body>
    <div
      class="relative min-h-screen font-sans text-white bg-gradient-to-br from-green-200 via-green-400 to-green-500"
    >
      <main class="container px-4 py-12 mx-auto">
        <slot />
      </main>

      <footer class="font-mono opacity-60">
        <nav class="flex justify-between max-w-4xl p-4 mx-auto text-sm md:p-8">
          <p></p>

          <p>
            Created with
            <a
              class="font-bold no-underline uppercase"
              href="https://astro.build"
              target="_blank"
              rel="noopener noreferrer"
            >
              Astro
            </a>
            &amp;
            <a
              class="font-bold no-underline uppercase"
              href="https://tailwindcss.com"
              target="_blank"
              rel="noopener noreferrer"
            >
              TailwindCSS
            </a>
          </p>
        </nav>
      </footer>
    </div>
  </body>
</html>
